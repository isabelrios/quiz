    
    <form methods="get" action="/quizes/<%= quiz.id %>/answer">
        <p>Pregunta: <%= quiz.pregunta %> </p>

        <input type="text" name="respuesta" value="Respuesta"/>
        <input type="submit" value="Enviar">
    </form>
  

  <p><a href="/quizes/<%= quiz.id %>/comments/new">
      <button>Nuevo comentario</button></a></p>
  
  <p><strong>Comentarios:</strong></p>
      
      <%for(index in quiz.comment){%>
        <%if(quiz.comment[index].publicado || session.user){%>
          
          <p>- <%=quiz.comment[index].texto%> 

          <%if(session.user && !quiz.comment[index].publicado){%>
            <a href="/quizes/<%= quiz.id %>/comments/<%quiz.comments[index].id%>/publish">
                                                <button>Publicar</button></a>

          <%}%>

          </p>
          
        <%}%>
      <%}%>
